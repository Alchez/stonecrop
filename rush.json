{
	"$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",
	"rushVersion": "5.87.0",
	"pnpmVersion": "7.20.0",
	"pnpmOptions": {
		"useWorkspaces": true
	},
	"approvedPackagesPolicy": {
		"reviewCategories": ["production", "tool", "prototype", "documentation", "utilities"],
		"ignoredNpmScopes": ["@types"]
	},
	"gitPolicy": {},
	"repository": {
		"url": "https://github.com/agritheory/stonecrop",
		"defaultBranch": "development",
		"defaultRemote": "origin"
	},
	"eventHooks": {
		"preRushInstall": [],
		"postRushInstall": [],
		"preRushBuild": [],
		"postRushBuild": []
	},
	"variants": [],
	"ensureConsistentVersions": true,
	"hotfixChangeEnabled": false,
	"telemetryEnabled": false,
	"projects": [
		{
			"packageName": "@alchez/aform",
			"projectFolder": "aform",
			"reviewCategory": "prototype",
			// to avoid circular dependency problems
			"decoupledLocalDependencies": ["@alchez/atable"],
			"shouldPublish": true
		},
		{
			"packageName": "@alchez/atable",
			"projectFolder": "atable",
			"reviewCategory": "prototype",
			// to avoid circular dependency problems
			"decoupledLocalDependencies": ["@alchez/aform"],
			"shouldPublish": true
		},
		{
			"packageName": "@alchez/desktop",
			"projectFolder": "desktop",
			"reviewCategory": "prototype",
			"shouldPublish": true
		},
		{
			"packageName": "@alchez/code-editor",
			"projectFolder": "code_editor",
			"reviewCategory": "prototype",
			"shouldPublish": false
		},
		{
			"packageName": "@alchez/examples",
			"projectFolder": "examples",
			"reviewCategory": "prototype",
			"shouldPublish": false
		},
		{
			"packageName": "@alchez/node_editor",
			"projectFolder": "node_editor",
			"reviewCategory": "prototype",
			"shouldPublish": false
		},
		{
			"packageName": "@alchez/stonecrop",
			"projectFolder": "stonecrop",
			"reviewCategory": "prototype",
			"shouldPublish": true
		},
		{
			"packageName": "@alchez/themes",
			"projectFolder": "themes",
			"reviewCategory": "prototype"
		},
		{
			"packageName": "@alchez/utilities",
			"projectFolder": "utilities",
			"reviewCategory": "utilities",
			"shouldPublish": true
		}
